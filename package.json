{
	"name": "vue3-ui-design",
	"version": "0.1.0",
	"private": true,
	"description": "A UI component library with Vue3",
	"author": "Homyee King",
	"license": "MIT",
	"repository": "git@github.com:HomyeeKing/vue3-ui-design.git",
	"scripts": {
		"dev": "cross-env NODE_ENV=development webpack --inline --progress --config build/webpack.config.dev.js",
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint"
	},
	"dependencies": {
		"core-js": "^3.6.5",
		"lodash.debounce": "^4.0.8",
		"lodash.throttle": "^4.1.1",
		"node-notifier": "^8.0.0",
		"vue": "^3.0.0-beta.1",
		"vue-router": "^4.0.0-beta.13",
		"vuex": "^4.0.0-beta.4"
	},
	"devDependencies": {
		"@types/lodash.debounce": "^4.0.6",
		"@types/lodash.throttle": "^4.1.6",
		"@typescript-eslint/eslint-plugin": "^2.33.0",
		"@typescript-eslint/parser": "^2.33.0",
		"@vue/cli-plugin-babel": "~4.5.0",
		"@vue/cli-plugin-eslint": "~4.5.0",
		"@vue/cli-plugin-typescript": "~4.5.0",
		"@vue/cli-service": "~4.5.0",
		"@vue/compiler-sfc": "^3.0.0-beta.1",
		"@vue/eslint-config-prettier": "^6.0.0",
		"@vue/eslint-config-typescript": "^5.0.2",
		"babel-eslint": "^10.1.0",
		"copy-webpack-plugin": "^6.2.1",
		"cross-env": "^7.0.2",
		"eslint": "^6.7.2",
		"eslint-plugin-prettier": "^3.1.3",
		"eslint-plugin-vue": "^7.0.0-alpha.0",
		"friendly-errors-webpack-plugin": "^1.7.0",
		"html-webpack-plugin": "^4.5.0",
		"lint-staged": "^9.5.0",
		"markdown-it": "^8.4.1",
		"markdown-it-anchor": "^5.0.2",
		"markdown-it-container": "^2.0.0",
		"markdown-it-emoji": "^1.4.0",
		"markdown-it-table-of-contents": "^0.3.6",
		"mini-css-extract-plugin": "^1.0.0",
		"node-sass": "^4.14.1",
		"prettier": "^1.19.1",
		"sass-loader": "^10.0.3",
		"typescript": "^4.0.3",
		"vue-loader": "^15.9.3",
		"webpack": "^5.2.0",
		"webpack-bundle-analyzer": "^3.4.1",
		"webpack-cli": "^4.1.0",
		"webpack-dev-server": "^3.2.1",
		"webpack-merge": "^5.2.0"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/vue3-essential",
			"eslint:recommended",
			"@vue/typescript",
			"@vue/typescript/recommended",
			"@vue/prettier",
			"@vue/prettier/@typescript-eslint"
		],
		"parserOptions": {
			"parser": "@typescript-eslint/parser",
			"ecmaVersion": 2020
		},
		"rules": {}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead"
	],
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{js,jsx,vue,ts,tsx}": [
			"vue-cli-service lint",
			"git add"
		]
	}
}
